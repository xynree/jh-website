---
import { Image } from "astro:assets";
import johnHondaLogo from "../assets/jh-logo-horizontal.png";
---

<a href="/" class="header-link">
  <Image src={johnHondaLogo} alt="John Honda logo" />
</a>

<style>
  p {
    text-align: center;
  }

  .header-link {
    display: inline-block;
    text-decoration: none;
    margin: 1.5rem 0 1.875rem -1rem;
    width: 60%;
  }

  .header-link img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 680px) {
    .header-link {
      width: 70%;
    }
  }

  @media (max-width: 480px) {
    .header-link {
      margin: 0.5rem 0;
      width: 85%;
    }
  }
</style>
